\pset null 'NULL'
\set AUTOCOMMIT off
\set ON_ERROR_ROLLBACK on
\set ON_ERROR_STOP on
\set HISTFILE ~/.local/psql_history/.psql_history- :DBNAME
\set HISTSIZE 500000
\timing
\encoding unicode
\pset linestyle unicode
-- \set ECHO_HIDDEN 1
-- red prompt for live
\set PROMPT1 '%[%`(ps ho "args" $PPID | grep -q _live) && echo -e "\\e[0;41m"`%]%/%R%#%[%033[m%] '
\set PROMPT2 '%[%`(ps ho "args" $PPID | grep -q _live) && echo -e "\\e[0;41m"`%]%/%R%#%[%033[m%] '
\set PROMPT3 '%[%`(ps ho "args" $PPID | grep -q _live) && echo -e "\\e[0;41m"`%]>>[%033[m%]'

[user]
	name  = Patrick King
	email = patrick.king@thescore.com
	username = pkingthescore
	signingkey = 0x8B0C458889ED463C

[gpg]
	program = /usr/local/MacGPG2/bin/gpg

# Non-template things
[alias]
	amend = commit -a --amend --no-edit
	show-alias = config --get-regexp ^alias\\.
	sign = commit --amend --signoff
	up = pull --rebase --autostash

[branch]
	sort = -committerdate

[commit]
	gpgsign = true

[core]
	editor=nvim
	whitespace=all
	eol = lf
	excludesfile = ~/.global_gitignore

[color]
	branch = auto
	diff = auto
	status = auto

[diff]
	mnemonicPrefix = true
	wsErrorHighlight = all
	colorMoved = dimmed-zebra
	wordDiff = color
	algorithm = minimal

[fetch]
	prune = true
	pruneTags = true
	output = compact
	parallel = 0

[help]
	autoCorrect = 1

[log]
	showSignature = true

[merge]
	conflictStyle = diff3

[push]
	default = current
	followTags = true
	autoSetupRemote = true

[rebase]
	stat = true

[status]
	branch = true

[web]
	browser = google-chrome

# Override settings when working on work-related projects
# on a personal machine.
[includeIf "gitdir:~/dev/github.com/scorebet/"]
	path = ~/.gitconfig.work

[includeIf "gitdir:~/dev/github.com/scoremedia/"]
	path = ~/.gitconfig.work

# Override machine-specific settings.
[include]
	path = ~/.gitconfig.local

[credential]
	helper = store


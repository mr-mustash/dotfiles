    signingkey = 0x944E36F397047609
{{else}}
	email = patrick@patrickcking.com
	username = mr-mustash
	signingkey = 0x944E36F397047609
{{end}}
[core]
	editor=vim
	whitespace=all
	excludesfile = ~/.global_gitignore
[web]
	browser = google-chrome
[commit]
	gpgsign = true
[gpg]
{{ if eq (.Env.OSTYPE | printf "%.6s") "darwin"}}
    program = /usr/local/MacGPG2/bin/gpg
{{else}}
	program = /usr/bin/qubes-gpg-client-wrapper
{{end}}
[push]
	default = current
[log]
	showSignature = true
[alias]
	up = pull --rebase --autostash
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

; Override settings when working on work-related projects
; on a personal machine.
[includeIf "gitdir:~dev/github.com/pelotoncycle/"]
    path = ~/.gitconfig.work

; Override machine-specific settings.
[include]
    path = ~/.gitconfig.local
